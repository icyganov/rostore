<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>delivery</id>
    <formats>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>${project.basedir}/rostore.properties.template</source>
            <outputDirectory>/</outputDirectory>
            <destName>rostore.properties</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
                <include>rostore.cmd</include>
                <include>rostore</include>
                <include>rostore.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>rostore-service.jar</include>
                <include>rostore-cli.jar</include>
                <include>rostore-cli</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>